def is_palindrome(s):
    # Приводим строку к нижнему регистру и удаляем пробелы
    s = s.lower().replace(" ", "")
    # Проверяем, является ли строка палиндромом
    return s == s[::-1]

# Ввод строки от пользователя
string = input("Введите строку для проверки на палиндром: ")

# Проверка строки на палиндром и вывод результата
if is_palindrome(string):
    print("Да, строка является палиндромом.")
else:
    print("Нет, строка не является палиндромом.")
